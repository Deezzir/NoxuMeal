<script>
    openForms("{{kak}}");
</script>

<div class="image parallax1">
    <div class="caption">
        <span class="border">Menu</span>
    </div>
</div>

<div class="info">
    <div class="border1 f">CLASSIC MEALS</div>
    <div class="grid2_2-container">
        {{#each data }}
            {{#unless this.top }}
                <a href="/meal?mealId={{title}}" style="text-decoration: none" href="">
                    <div class="card">
                        <img src="{{img}}" alt="Food" style="width:100%;">
                        <div class="container">
                            <h3>{{title}}</h3>
                            <p>With
                                {{#each contains}}
                                    {{this}}
                                {{/each}}
                            </p>
                            <br>
                            <h4>Price: {{price}}$</h4>
                        </div>
                    </div>
                </a>
            {{/unless}}
        {{else}}
            <center><h3>No Meals</h3></center>
        {{/each}}
    </div>
</div>